<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:jr="http://openrosa.org/javarosa" xmlns="http://www.w3.org/2002/xforms">
    <h:head>
        <h:title>image_widget</h:title>
        <model>
            <instance>
                <data id="build_image-widget_1630658903">
                    <meta>
                        <instanceID />
                    </meta>
                    <image />
                </data>
            </instance>
            <itext>
                <translation lang="English">
                    <text id="/data/image:label">
                        <value>Image</value>
                    </text>
                </translation>
            </itext>
            <bind calculate="concat('uuid:', uuid())" nodeset="/data/meta/instanceID" readonly="true()"
                type="string" />
            <bind nodeset="/data/image" type="binary" />
        </model>
    </h:head>
    <h:body>
        <upload mediatype="image/*" ref="/data/image">
            <label ref="jr:itext('/data/image:label')" />
        </upload>
    </h:body>
</h:html>
