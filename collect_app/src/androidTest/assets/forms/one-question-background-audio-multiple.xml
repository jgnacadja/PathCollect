<?xml version="1.0"?>
<h:html xmlns:h="http://www.w3.org/1999/xhtml" xmlns:odk="http://www.opendatakit.org/xforms" xmlns:orx="http://openrosa.org/xforms"
    xmlns="http://www.w3.org/2002/xforms">
    <h:head>
        <h:title>One Question</h:title>
        <model>
            <instance>
                <data id="one_question" orx:version="1">
                    <recording1 />
                    <recording2 />
                    <age />
                </data>
            </instance>
            <bind nodeset="age" type="int" />
            <odk:recordaudio event="odk-instance-load" ref="/data/recording1" />
            <odk:recordaudio event="odk-instance-load" ref="/data/recording2" />
        </model>
    </h:head>
    <h:body>
        <input ref="/data/age">
            <label>what is your age</label>
        </input>
    </h:body>
</h:html>
