<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="@dimen/margin_extra_small"
    android:layout_marginTop="@dimen/margin_standard"
    android:layout_marginEnd="@dimen/margin_standard"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/postImageView"
        android:layout_width="@dimen/post_image_size"
        android:layout_height="96dp"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_extra_small"
        android:src="@drawable/ic_outline_website_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/postTitle"
            style="@style/TextAppearance.Collect.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/odk_website"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/postPreview"
            style="@style/TextAppearance.Collect.Body2.MediumEmphasis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:justificationMode="inter_word"
            android:text="@string/odk_website" />
    </LinearLayout>
</LinearLayout>