<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginStart="@dimen/margin_extra_small"
    android:layout_marginTop="@dimen/margin_standard"
    android:layout_marginEnd="@dimen/margin_extra_small"
    android:background="@drawable/bg_hospital"
    android:orientation="horizontal"
    android:padding="@dimen/margin_small">

    <ImageView
        android:id="@+id/prestationType"
        android:layout_width="@dimen/size_layout_width"
        android:layout_height="@dimen/size_layout_height"
        android:layout_gravity="center"
        android:layout_marginEnd="@dimen/margin_extra_small"
        android:padding="@dimen/margin_standard"
        android:src="@drawable/ic_product" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/productName"
                style="@style/TextAppearance.Collect.Subtitle1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/none"
                android:textColor="@color/colorPrimary"
                android:layout_weight="1"
                android:textSize="@dimen/text_size_hospital"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/productAvailability"
                android:layout_width="@dimen/text_size_product"
                android:layout_height="@dimen/text_size_product"
                android:layout_gravity="center"
                android:src="@drawable/ic_available" />
        </LinearLayout>

        <TextView
            android:id="@+id/productPrice"
            style="@style/TextAppearance.Collect.Body2.MediumEmphasis"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:layout_weight="1"
            android:text="@string/none"
            android:textColor="@color/colorOnSurface" />
    </LinearLayout>
</LinearLayout>
