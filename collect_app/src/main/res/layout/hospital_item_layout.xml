<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="@dimen/margin_standard"
    android:layout_marginStart="@dimen/margin_extra_small"
    android:layout_marginEnd="@dimen/margin_standard"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/hospitalImageView"
        android:layout_width="92dp"
        android:layout_height="96dp"
        android:layout_marginEnd="@dimen/margin_extra_small"
        android:layout_gravity="center"
        android:src="@drawable/ic_outline_website_24" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/hospitalTitle"
            style="@style/TextAppearance.Collect.Subtitle1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/odk_website"
            android:textColor="@color/colorPrimary"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/hospitalPreview"
            style="@style/TextAppearance.Collect.Body2.MediumEmphasis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:justificationMode="inter_word"
            android:text="@string/odk_website"
            android:textColor="@color/color15" />

        <TextView
            android:id="@+id/hospitalLevel"
            style="@style/TextAppearance.Collect.Body2.MediumEmphasis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_extra_small"
            android:justificationMode="inter_word"
            android:text="@string/odk_website"
            android:textColor="@color/color15" />
    </LinearLayout>
</LinearLayout>
